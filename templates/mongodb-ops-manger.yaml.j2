apiVersion: mongodb.com/v1
kind: MongoDBOpsManager
metadata:
  name: ops-manager
  labels:
    app: quarkusrobotshop
  namespace: {{ project_namespace }}
spec:
  version: 4.4.1
  externalConnectivity:
    type: LoadBalancer
  applicationDatabase:
    podSpec:
      cpu: '1'
    persistent: true
    members: 3
  adminCredentials: ops-manager-admin
  configuration:
    mms.fromEmailAddr: admin@thecompany.com